{
  "name": "turretcss-boilerplate",
  "version": "5.0.0",
  "description": "The turretcss-boilerplate is a basic boilerplate using turretcss, PostCSS, PostCSS CLI, postcss-preset-env, and CSSNano.",
  "license": "MIT",
  "contributors": [
    {
      "name": "Scott de Jonge",
      "email": "scottdj@bigfish.tv",
      "url": "http://scottdejonge.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/turretcss/turretcss-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/turretcss/turretcss-boilerplate/issues"
  },
  "dependencies": {
    "turretcss": "^5.1.0"
  },
  "devDependencies": {
    "cssnano": "^4.1.0",
    "postcss": "^7.0.36",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.14.0"
  },
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run build -- --verbose --watch",
    "build": "postcss assets/css/app.css -o dist/bundle.css",
    "format": "npm run format:css",
    "format:css": "prettier --single-quote --print-width 180 --write '*.css'"
  }
}
